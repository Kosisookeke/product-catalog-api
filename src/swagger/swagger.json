                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" },
                  "price": { "type": "number" },
                  "stock": { "type": "number" },
                  "category": {
                    "type": "string",
                    "example": "687ae7c488dc8fc90d666afb"
